
<%= form_with(model: @document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
    <div class="col-2"><p>
        <%= form.label :document_type, style: "display: block" %></p>
    </div>
    <div class="col-10"><p>
        <%= form.text_field :document_type %></p>
    </div>
</div>
<div class="row">
    <div class="col-2"><p>
        <%= form.label :document_description, style: "display: block" %></p>
    </div>
    <div class="col-10"><p>
        <%= form.text_area :document_description, class: "col-12 row-3" %></p>
    </div>
    <div class="col-2"><p>
        <%= form.label :requirement_one_required?, style: "display: block" %></p>
    </div>
    <div class="col-10"><p>
        <%= form.check_box :requirement1_required %></p>
    </div>
    <div id="requirement1", style="display:none;">
        <div class="row">
            <div class="col-2"><p>
                <%= form.label :requirement_one, style: "display: block" %></p>
            </div>
            <div class="col-10"><p>
                <%= form.text_area :requirement1, class: "col-12 row-3" %></p>
            </div> 
        </div> 
    </div>
    <div class="col-2"><p>
        <%= form.label :requirement_two_required?, style: "display:block;"%></p>    
    </div>
    <div class="col-10"><p>
        <%=form.check_box :requirement2_required%></p>
    </div>
    <div id="requirement2", style="display:none;">
        <div class="row">
            <div class="col-2"><p>
                <%=form.label :requirement_two, style: "display: block"%></p>
            </div>
            <div class="col-10"><p>
                <%=form.text_area :requirement2, class: "col-12 row-3"%></p>
            </div>
        </div>
    </div>
    <div class="col-2"><p>
        <%= form.label :requirement_three_required?, style: "display:block;"%></p>    
    </div>
    <div class="col-10"><p>
        <%=form.check_box :requirement3_required%></p>
    </div>
    <div id="requirement3", style="display:none;">
        <div class="row">
            <div class="col-2"><p>
                <%=form.label :requirement_three, style: "display: block"%></p>
            </div>
            <div class="col-10"><p>
                <%=form.text_area :requirement3, class: "col-12 row-3"%></p>
            </div>
        </div>
    </div>
    <div class="col-2"><p>
        <%= form.label :requirement_four_required?, style: "display:block;"%></p>    
    </div>
    <div class="col-10"><p>
        <%=form.check_box :requirement4_required%></p>
    </div>
    <div id="requirement4", style="display:none;">
        <div class="row">
            <div class="col-2"><p>
                <%=form.label :requirement_four, style: "display: block"%></p>
            </div>
            <div class="col-10"><p>
                <%=form.text_area :requirement4, class: "col-12 row-3"%></p>
            </div>
        </div>
    </div>
</div>
<div>
    <%= form.submit %>
</div>
<% end %>
<script type="text/javascript">
  var checkbox = document.getElementById('document_requirement1_required');
  var details_div = document.getElementById('requirement1');
  checkbox.onchange = function() {
     if(this.checked) {
       details_div.style['display'] = 'block';
     } else {
       details_div.style['display'] = 'none';
     }
  };
  var checkbox = document.getElementById('document_requirement2_required');
  var details_div2 = document.getElementById('requirement2');
  checkbox.onchange = function() {
     if(this.checked) {
       details_div2.style['display'] = 'block';
     } else {
       details_div2.style['display'] = 'none';
     }
  };
  var checkbox = document.getElementById('document_requirement3_required');
  var details_div3 = document.getElementById('requirement3');
  checkbox.onchange = function() {
     if(this.checked) {
       details_div3.style['display'] = 'block';
     } else {
       details_div3.style['display'] = 'none';
     }
  };
  var checkbox = document.getElementById('document_requirement4_required');
  var details_div4 = document.getElementById('requirement4');
  checkbox.onchange = function() {
     if(this.checked) {
       details_div4.style['display'] = 'block';
     } else {
       details_div4.style['display'] = 'none';
     }
  };
</script>

