<div class="container text-center">
    <div class="row mx-1">
        <div class="mx-auto border border-black mt-5 shadow p-3 mb-5 bg-body-tertiary rounded", id="user_card">
            <h2>Sign up</h2>
            <br>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 border border-black shadow p-2" %>
            </div>

            <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "w-100 border border-black shadow p-2" %>
            </div>

            <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 border border-black shadow p-2" %>
            </div>
            <br>
            <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-outline-primary shadow"%>
            </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>