<div class="container text-center">
    <div class="row mx-1">
        <div class="mx-auto border border-black mt-5 shadow p-3 mb-5 bg-body-tertiary rounded", id="user_card">
            <h2>Forgot your password?</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 border border-black shadow p-2" %>
            </div>
            <br>
            <div class="actions">
                <%= f.submit "Send me reset password instructions", class: "btn btn-outline-primary shadow" %>
            </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>