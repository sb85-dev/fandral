<div class="container text-center">
    <div class="row mx-1">
        <div class="mx-auto border border-black mt-5 shadow p-3 mb-5 bg-body-tertiary rounded", id="user_card">


            <h2>Change your password</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
                <%= f.label :password, "New password" %><br />
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-100 border border-black shadow p-2" %>
            </div>

            <div class="field">
                <%= f.label :password_confirmation, "Confirm new password" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 border border-black shadow p-2" %>
            </div>
            <br>
            <div class="actions">
                <%= f.submit "Change my password", class: "btn btn-outline-primary shadow" %>
            </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>