<div class="container">
    <%= render @member %>
    <h1 class="border-bottom"><%= @member.full_name%></h1>
    <br>
    <div class="border-bottom">
        <h3>Alerts</h3>
        <div class="container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Alert ID</th>
                        <th>Membder ID</th>
                        <th>Date Created</th>
                    </tr>
                </thead>
                <tbody>
                    <% @member.alerts.each do |alert|%>
                    <tr>
                        <td><%= link_to alert.id, member_alert_path(@member, alert) %></td>
                        <td><%= alert.member.id %></td>
                        <td><%= alert.created_at.strftime("%m-%d-%y")%></td>
                    </tr>
                    <%end%>
                </tbody>
            </table>
        </div>
        <br>
    </div>
    <br>
    <div class="border-bottom">
        <h3>Accounts</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Account Numbers</th>
                    <th>Account Type</th>
                </tr>
            </thead>
            <tbody>
                <% @accounts.each do |number|%>
                <tr>
                    <td><%= number.number %></td>
                    <td><%= number.account_type%></td>
                </tr>
                <%end%>
            </tbody>
        </table>
        <div class="container">
            <div class="row mx-auto">
                <%= form_with(model: [@member, @member.account_numbers.build]) do |form|%>
                        <%=form.label :number%>
                        <%=form.text_field :number%>
                        <%=form.label :account_type, class: "ms-2"%>
                        <%=form.text_field :account_type%>
                        <%= form.submit 'Add Account', class: "ms-2"%>
                </div>
            <%end%>
        </div>
    </div>
    <div class="border-bottom pt-5">
        <%= link_to "Edit this member", edit_member_path(@member) %> |
        <%= link_to "Back to members", members_path %>
        <%= button_to "Destroy this member", @member, method: :delete %>
    </div>
</div>