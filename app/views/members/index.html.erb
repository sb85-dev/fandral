<div class="container">
    <div class="row mx-1">
        <h1>Members</h1>
        <div class="col-2">
            <%= link_to "New member", new_member_path, class: "btn btn-outline-primary shadow" %>
        </div>
        <br><br>
            <div class="shadow p-3 mb-5 bg-body-tertiary rounded">
                <table class="table table-striped table-bordered shadowed">
                    <thead>
                        <tr>
                            <th>Member Name</th>
                            <th>Timer</th>
                            <th>Date Added</th>
                            <th>Date Updated</th>
                            <th>Status</th>
                            <th>Alert Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @members.each do |member| %>
                            <%= render member %>
                            <tr>
                                <td><%=link_to member.full_name, member%></td>
                                <td>Placeholder for Timer</td>
                                <td><%=member.created_at.strftime("%m-%d-%y")%></td>
                                <td><%=member.updated_at.strftime("%m-%d-%y")%></td>
                                <td>Placeholder for alert status (monitor, request doc etc)</td>
                                <td>Placeholder for Alert Category (reg cc, chargeback etc)</td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>